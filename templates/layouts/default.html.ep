<!DOCTYPE html>
<html>
  <head>
    % if ($meta_data && $meta_data->{title}) {
      <title>Coxify - <%= $meta_data->{title} %></title>
    % } else {
      <title>Coxify</title>
    % }

    <link rel="stylesheet" href="/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="/css/coxify.css"/>

    <link rel="icon" href="/favicon.ico" type="image/x-icon">
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">

    <link rel="alternate" href="/atom.xml" type="application/atom+xml" title="All images (Atom)" />

    <script src="http://code.jquery.com/jquery-latest.js"></script>

    <script>
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-21543926-1']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
    </script>

    <script>
      $(document).ready(function () {
        $('a[id^="year-"]').each(function() {
          var year = parseInt(this.id.replace("year-", ""));
          $("#year-" + year).click(function () {
            $("#year-ul-" + year).toggle();
          });
        });

        $('#show-days').click(function () {
          $('.day-hide').toggle();
          $(this).remove();
        });
      });
    </script>

    % if ($meta_data) {
      % if ($meta_data->{title}) {
        <meta property="og:title" content="Coxify - <%= $meta_data->{title} %>" />  
      % } else {
        <meta property="og:title" content="Coxify" />
      % }
      
      <meta property="og:description" content="Coxify is your friendly neighbourhood image aggregator" />
      <meta property="og:image" content="<%= $meta_data->{image}->thumb %>" />
    % }
  </head>
  <body>
    <div class="container">
      <div class="content">
        <div class="page-header">
          <h1>
            <a href="/" style="color: black">Coxify</a> 
            <small>Remember everything</small>
          </h1>
        </div>

        <ul class="breadcrumb">
          % for my $i (0 .. (scalar(@{ $breadcrumbs }) - 1)) {
              % my $crumb = $breadcrumbs->[$i];
              <li>
                % if ($i == scalar(@{$breadcrumbs}) - 1) {
                  %= $crumb->{title}
                % } else {
                  <a href="<%= $crumb->{path} %>"><%= $crumb->{title} %></a>
                  <span class="divider">/</span>
                % } 
              </li>
          % }
        </ul>
        <%= content %>
      </div>
    </div>
  </body>
</html>
