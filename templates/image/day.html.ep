%layout 'default';

<section>
  <div class="row">
    <div class="span12">
      <div class="row">
        <h1 class="span12"><%= $images->[0]->created_date->ymd %></h1>
        % for my $i (0 .. (scalar(@$images) - 1)) {
          % if ($i % 4 == 0) {
            </div>
            <div class="row">
          % }

          % my $image = @{ $images }[$i];
          <div class="span3" style="height: 150px">
            <a href="<%= $image->url %>">
              <div class="row">
                <div class="span3" style="height: 150px">
                  <img class="thumbnail center" src="<%= $image->thumb %>"/>
                </div>
              </div>
            </a>
          </div>
        % }
      </div>
    </div>
    <div class="span4"> 
      <ul>
        % for my $date (@{ $dates }) {
          % if ($images->[0]->created_date->ymd eq $date->{date}) {
            <li><b><%= $date->{date} %></b> (<%= $date->{count} %>)</li>
          % } else {
            <li><a href="<%= $date->{url} %>"><%= $date->{date} %></a> (<%= $date->{count} %>)</li>
          % }
        % }
      </ul>
      <div class="row">
        <div class="span4">
          %= include 'partial/year_list'
        </div>
      </div>
    </div>
  </div>
</section>