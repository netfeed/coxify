%layout 'default';

<section>
  <div class="row">
    <div class="span12">
      &nbsp;
      % my $style = '';
      % if ($image->width > 690) {
      %   $style = 'style="width: 650px"';
      % }
      <img class="center" <%== $style %> src="<%= $image->medium %>"/>
    </div>
    <div class="span4"> 
      % if ($previous) {
        <div class="row" style="height: 150px">
          <a href="<%= $previous->url() %>">
            <div class="span3 thumb-height coxify-image">
              <img class="center" src="<%= $previous->thumb() %>"/>
                <p><span>Previous</span></p>
            </div>
          </a>
        </div>
      % }

      % if ($next) {
        <div class="row" style="height: 150px">
          <a href="<%= $next->url() %>">
            <div class="span3 thumb-height coxify-image">
              <img class="center" src="<%= $next->thumb() %>"/>
              <div class="fancy-label">
                <p><span>Next</span></p>
              </div>
            </div>
          </a>
        </div>
      % }
    </div>
  </div>
</section>